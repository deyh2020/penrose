canvas {
  width = 800
  height = 700
}

forall Shape x {
    x.a = (?, ?)
    x.b = (?, ?)
    x.c = (?, ?)
    x.icon = Polygon {
        points: [ x.a, x.b, x.c ]
    }
    
    x.ab = sqrt((x.b[0] - x.a[0]) * (x.b[0] - x.a[0]) + (x.b[1] - x.a[1]) * (x.b[1] - x.a[1]))
    x.bc = sqrt((x.c[0] - x.b[0]) * (x.c[0] - x.b[0]) + (x.c[1] - x.b[1]) * (x.c[1] - x.b[1]))
    x.ca = sqrt((x.a[0] - x.c[0]) * (x.a[0] - x.c[0]) + (x.a[1] - x.c[1]) * (x.a[1] - x.c[1]))

    x.area = 0.25 * sqrt((x.ab + x.bc + x.ca) * (-x.ab + x.bc + x.ca) * (x.ab - x.bc + x.ca) * (x.ab + x.bc - x.ca))

    encourage equal(x.area, 10000.0)

    ensure lessThan(x.ab, 300)
    ensure lessThan(x.bc, 300)
    ensure lessThan(x.ca, 300)

    ensure lessThan(300.0, x.a[0])
    ensure lessThan(300.0, x.a[1])
}

Shape x; Shape y {
   ensure disjoint(x.icon, y.icon)
}
