
canvas {
  width = 800
  height = 700
}

forall Maze x {
    x.a1 = (-25.0, 70.0)
    x.a2 = (0.0, -30.0)
    x.a3 = (-50.0, -30.0)
    x.a4 = (-50.0, 5.0)
    x.a5 = (-110.0, -55.0)
    x.a6 = (-140.0, -160.0)
    x.a7 = (100.0, -80.0)
    x.a8 = (0.0, 170.0)
    x.a9 = (-170.0, 80.0)
    x.icon = Polygon {
        points: [x.a1, x.a2, x.a3, x.a4, x.a5, x.a6, x.a7, x.a8, x.a9]
    }
}

forall Triangle x {
    x.x = ? 
    x.y = ?
    x.a = (x.x - 10.0, x.y)
    x.b = (x.x, x.y + 15.0)
    x.c = (x.x + 10.0, x.y)

    x.icon = Polygon {
        points: [ x.a, x.b, x.c ]
    }
}

Triangle x; Maze y {
    ensure contains(y.icon, x.icon)
}
